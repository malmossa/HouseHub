@model HouseHub.Shared.Models.UserProfile

@{
    ViewData["Title"] = "Details";
}

<h2>User Profile Details</h2>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dt class="col-sm-10">@Model.Email</dt>

        <dt class="col-sm-2">Created At</dt>
        <dt class="col-sm-10">@Model.CreatedAt.ToString("g")</dt>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edite</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


