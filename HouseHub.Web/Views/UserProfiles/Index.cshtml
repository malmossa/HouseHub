@model List<HouseHub.Shared.Models.UserProfile>

<h2>User Profiles</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add New User</a>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profile in Model)
        {
            <tr>
                <td>@profile.FullName</td>
                <td>@profile.Email</td>
                <td>@profile.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@profile.Id" class="btn btn-primary btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@profile.Id" class="btn btn-secondary btn-sm">Edit</a>

                    <!-- Delete Button (Triggers Modal) -->
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@profile.Id">
                        Delete
                    </button>

                    <!-- Render the Modal -->
                    @await Html.PartialAsync("_DeleteModal", profile)
                </td>

            </tr>
        }
    </tbody>
</table>
