@{
    ViewData["Title"] = "Dashbaord";
}

@model HouseHub.Web.ViewModels.DashboardViewModel

<!-- Loading Spinner Overlay -->
<div id="loadingOverlay" style="position: fixed; top:0; left:0; width:100%; height:100%; background: rgba(255,255,255,0.8); z-index:9999; display:flex; justify-content:center; align-items:center;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>


<h2>Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total Users</div>
            <div class="card-body">
                <h4 class="card-title">@Model.TotalUserProfiles</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">New This Week</div>
            <div class="card-body">
                <h4 class="card-title">@Model.NewUsersThisWeek</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">New Today</div>
            <div class="card-body">
                <h4 class="card-title">@Model.NewUsersToday</h4>
            </div>
        </div>
    </div>

</div>

<div class="card">
    <div class="card-header">User Growth Chart</div>
    <div class="card-body">
        <canvas id="userChart"></canvas>
    </div>
</div>

@section Scripts {
    <script>
        // Hide the loading spinner after page is fully loaded
        window.addEventListener('load', function () {
            const overlay = document.getElementById('loadingOverlay');
            if (overlay) {
                overlay.style.display = 'none';
            }
        });

        const ctx = document.getElementById('userChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Labels)),
                datasets: [{
                    label: 'New Users',
                    data: @Html.Raw(Json.Serialize(Model.DataPoints)),
                    backgroundColor: '#007bff'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: 'New Users Over the Last 7 Days'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}

